<div class="resizable" style="height:400px; width:100%;">
  <div id="comparison_chart">
  </div>
</div>
<br>
  <table id="dataAndProgramStatistics" class="display">
    <thead>
    <!--<tr style="overflow: visible;">-->
    <tr>
      <th>Dataset</th>
      <% for i in 0..@qualityMeasures.length-1 %>
      <% measure = @qualityMeasures[i] %>
      <th>
        <%= measure.alias %>
      </th>
      <% end %>
    </tr>
   </thead>
   <tbody>
    <% for i in 0..@datas.length-1 %>
    <tr>
      <% for j in 0..@qualityMeasures.length %>
        <% if j == 0 %>
          <td><%= link_to matrix[i][j].name, matrix[i][j] %></td>
        <% else %>
          <td>
            <% if matrix[i][j].to_s == "--" %>
              <%= matrix[i][j].to_s %>
            <% else %>
              <a href="/<%= params[:repository] %>/programs/<%= program.id %>/clust/<%= @datas[i].id %>?post[clustering_quality_measure_id2]=<%= @qualityMeasures[j-1].id %>"><%= matrix[i][j].to_s %></a>
            <% end %>
          </td>
        <% end %>
      <% end %>
    </tr>
    <% end %>
  </tbody>
  </table>
<script type="text/javascript">
$(function () {
    var chart;
    $(document).ready(function() {
        chart = new Highcharts.Chart({
    
            chart: {
                renderTo: 'comparison_chart',
                type: 'column',
                marginBottom: 200
            },
	    
	    plotOptions: {
	    column: {
                borderWidth: 0,
                groupPadding: 0.1,
                pointPadding: 0.05
	    }},
    
            title: {
                text: 'Clustering qualities'
            },
    
            xAxis: {
                categories: [<% ClusteringQualityMeasure.all(params[:repository]).sort_by{|x| x.alias}.each do |measure| %><% if @visibleMeasures[measure] %>'<%= measure.alias %>',<% end %><% end %>],
                labels: {
                  enabled: true,
                  rotation: -45,
                  align: 'right'
                }
            },
            yAxis: {
                title: {
                    text: 'Clustering Quality'
                },
                min: <%= @minY %>,
                max: <%= @maxY %>,
            },
    
            tooltip: {
                formatter: function() {
                    return '<b>'+ this.x +'</b><br/>'+
                        this.series.name +': '+ this.y;
                }
            },
            series: [
<% Dataset.all(params[:repository]).sort_by{|x| x.name}.each do |dataset| %>
<% if @visibleDatas[dataset] %>
{
  name: '<%= dataset.name %>',
  data: [<% ClusteringQualityMeasure.all(params[:repository]).sort_by{|x| x.alias}.each do |measure| %>
  <% if @visibleMeasures[measure] %>
    <% @qual = @matrix[@dataIds[dataset]][@measureIds[measure]] %>
    <% if @qual != "--" %>
      <%= @qual %>
    <% else %>
      null
    <% end %>,<% end %><% end %>]
},
<% end %>
<% end %>
            ]
        });

      $( ".resizable" ).resizable({
        helper: "ui-resizable-helper",
        stop: function( event, ui ) {
          chart.setSize(ui.size.width,ui.size.height,doAnimation = true);
        }
      });
    });
});
</script>