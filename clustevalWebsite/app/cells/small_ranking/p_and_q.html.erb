<div class="resizable" style="height:400px; width:100%;">
  <div id="comparison_chart">
  </div>
</div>
<br>
<table id="dataAndProgramStatistics" class="display">
  <thead>
  <tr style="overflow: visible;">
    <th>Dataset</th>
    <% for i in 0..@qualityMeasures.length-1 %>
    <% measure = @qualityMeasures[i] %>
    <th style="overflow: visible;">
      <div style="position:absolute;top:-250px;">
      <svg version="1.1" width="200px" height="250px">
        <text fill="#000000" stroke="none" font-size="100%" font="serif" transform="rotate(-45,5,235)">
            <tspan x="5" y="250">
              <%= measure.alias %>
            </tspan>
          </text>
        </svg>
      </div>
    <!--<p class="rotate90">-->
      <!--<%= measure.alias %>-->
    <!--</p>-->
    </th>
    <% end %>
  </tr>
 </thead>
 <tbody>
  <% for i in 0..@datasets.length-1 %>
  <tr>
    <% for j in 0..@qualityMeasures.length %>
      <% if j == 0 %>
        <td><%= link_to matrix[i][j].name,matrix[i][j] %></td>
      <% else %>
        <td>
          <% if matrix[i][j].to_s == "--" %>
            <%= matrix[i][j].to_s %>
          <% else %>
            <a href="/programs/<%= program.id %>/clust/<%= @datasets[i].id %>?post[clustering_quality_measure_id2]=<%= @qualityMeasures[j-1].id %>"><%= matrix[i][j].to_s %></a>
          <% end %>
        </td>
      <% end %>
    <% end %>
  </tr>
  <% end %>
</tbody>
</table>
